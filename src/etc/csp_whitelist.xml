<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="infrangible_google_maps_maps_googleapis_com" type="host">maps.googleapis.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="infrangible_google_maps_maps_googleapis_com" type="host">maps.googleapis.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="infrangible_google_maps_maps_gstatic_com" type="host">maps.gstatic.com</value>
                <value id="infrangible_google_maps_googleapis_com" type="host">*.googleapis.com</value>
                <value id="infrangible_google_maps_ggpht_com" type="host">*.ggpht.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="infrangible_google_maps_fonts_gstatic_com" type="host">fonts.gstatic.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="infrangible_google_maps_fonts_googleapis_com" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
